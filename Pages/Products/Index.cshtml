@page
@model SupermarketWEB.Pages.Products.IndexModel
@{
	ViewData["title"] = "Index Products";
}
<h1>Index Products</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create new</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Products[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Products[0].CategoryId)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Item.CategoryId)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@Item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@Item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>